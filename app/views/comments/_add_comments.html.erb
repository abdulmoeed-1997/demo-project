<%= bootstrap_form_tag(url: comments_path, remote: true) do |f| %>

<%= f.hidden_field :product_id,
                  value: id %>
<%= f.text_area :comment,
              class:"form-control",
              placeholder:"write a comment...",
              hide_label: true%>
<br>

<%= f.submit 'Post', class:"btn btn-info pull-right" %>
<% end %>

<div class="clearfix"></div>
<hr>
